<script>
    $(function () {


        getGrid();
        function getGrid() {
            var columns = [];


            columns.push({ "data": "Id", text: "ID" });
            columns.push({ "data": "Name", text: "Name" });

            columns.push({ "data": "Detail", text: "Detail" });

            $.each(columns, function (i, item) {
                $(dt_FormType + ' thead tr').append('<td> ' + item.text + '</td > ');
            });

            var table = $(dt_FormType).DataTable({
                "ajax": {
                    "url": '/' + controllerName_Content + '/GetPaging',
                    "type": "POST",
                    "datatype": "json",
                    "data": function (searchModel) {
                        $(dt_FormType).LoadingOverlay("show");
                        searchModel.selectid = selecttype_FormType;
                    },
                    "dataSrc": function (json) {
                        return_data = new Array();
                        var data = json.data;

                        var website = siteConfig.BaseUrl;
                        $.each(data, function (i, row) {
                            var detail = '<a class="btn btn-sm btn-clean btn-icon btn-icon-md" href="/' + controllerName_Content + '/InsertOrUpdatePage?id=' + row.Id + '&' + 'selectid=' + row.Id + '&selectname=' + selectname_FormType + '&selecttype=' + selecttype_FormType + '&descname=' + descname_FormType + '" title="Edit"><i class="la la-edit"></i></a>';

                            //detail += '<a target="_blank" class="btn btn-sm btn-clean btn-icon btn-icon-md" href="' + website + row.Link + '" title="Önizleme"><i class="fa fa-eye"></i></a>';

                            return_data.push({
                                'Id': row.Id,
                                'Name': row.Name,

                                'Detail': detail,
                            });

                        });
                        $(dt_FormType).LoadingOverlay("hide");
                        return return_data;
                    }
                },
                "fnDrawCallback": function (settings, json) {

                    $('.dt-buttons').css('float', 'right');
                    $('.dt-buttons').css('margin-left', '20px');
                    $('.dt-buttons').css('margin-top', '16px');

                    $(dt_FormType).LoadingOverlay("hide");

                },
                "destroy": true,
                "caseInsensitive": true,
                "responsive": true,
                "pageLength": 100,
                "DisplayLength": 5,
                "lengthMenu": [[100, 25, 100, 1000, 2500, 5000], [100, 25, 100, 1000, 2500, 5000]],
                "lengthChange": true,
                "processing": true,
                "columns": columns,
                "order": [],
                rowReorder: true,
                columnDefs: [
                    { orderable: false, className: 'reorder', targets: 0, order: false },
                    { orderable: true, targets: '_all' }
                ],
            });
            table.on(dt_FormType + ' row-reorder.dt', function (dragEvent, diff, nodes) {
                var myArray = [];
                for (var i = 0, ien = diff.length; i < ien; i++) {
                    var rowData = table.row(diff[i].node).data(); myArray.push({ id: rowData.Id, OrderNo: diff[i].newPosition, dataid: selecttype_FormType });
                }
                $.ajx('/' + controllerName_Content + '/UpdateOrder', { postModel: myArray }, function (resultData) { table.ajax.reload(); $(table).LoadingOverlay("hide"); });
            });


        }
    });
</script>




